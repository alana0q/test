<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:key="tentel"
        app:title="@string/tentel_preferences_title"
        app:summary="@string/tentel_preferences_summary"
        app:fragment="com.tentel.app.fragments.settings.tentelPreferencesFragment"/>

    <Preference
        app:key="tentel_api"
        app:title="@string/tentel_api_preferences_title"
        app:summary="@string/tentel_api_preferences_summary"
