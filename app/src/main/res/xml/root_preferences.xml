        app:isPreferenceVisible="false"
        app:fragment="com.tentel.app.fragments.settings.tentelFloatPreferencesFragment"/>

    <Preference
        app:key="tentel_tasker"
        app:title="@string/tentel_tasker_preferences_title"
        app:summary="@string/tentel_tasker_preferences_summary"
        app:isPreferenceVisible="false"
        app:fragment="com.tentel.app.fragments.settings.tentelTaskerPreferencesFragment"/>

    <Preference
        app:key="tentel_widget"
        app:title="@string/tentel_widget_preferences_title"
        app:summary="@string/tentel_widget_preferences_summary"
        app:isPreferenceVisible="false"
        app:fragment="com.tentel.app.fragments.settings.tentelWidgetPreferencesFragment"/>

    <Preference
        app:key="about"
        app:title="@string/about_preference_title"
        app:persistent="false"/>
